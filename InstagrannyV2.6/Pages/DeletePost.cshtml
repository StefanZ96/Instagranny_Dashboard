@page
@model InstagrannyV2._6.Pages.DeletePostModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete Post</h1>

<h4 class="text-center">Are you sure you want to delete this post? <br /> Please keep in mind that every detail will be <span style="color:mediumvioletred">completely erased from the system and cannot be revoked!</span></h4>
<div>

    <hr />
    <dl class="row mt-5">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts.creatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.creatorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.CreatedAt)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.Description)
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="Posts.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Userlist" class="btn btn-primary">Back to List</a>
    </form>
</div>
