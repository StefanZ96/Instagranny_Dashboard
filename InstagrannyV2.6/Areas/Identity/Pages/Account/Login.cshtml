@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-5"></div>
<div class="text-center mt-5 fs-2">@ViewData["Title"]</div>
<div class="text-center mt-3 fs-4">For Instagranny staff only!<br/> Please do not try to log in with your Instagranny credentials, they will not work!</div>
<div class="row mt-5 justify-content-center">
    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-8 col-xs-10">
        <section>
            <form id="account" method="post">              
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-4">Log in</button>
                </div>
                
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
